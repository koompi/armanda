{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tomada",
  "version": "0.1.0",
  "identifier": "com.tomada.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tomada",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/tomada/icon_16x16.png",
      "icons/tomada/icon_32x32.png",
      "icons/tomada/icon_128x128.png",
      "icons/tomada/icon_256x256.png",
      "icons/tomada/icon_512x512.png",
      "icons/tomada/icon_16x16@2x.png",
      "icons/tomada/icon_32x32@2x.png",
      "icons/tomada/icon_128x128@2x.png",
      "icons/tomada/icon_256x256@2x.png",
      "icons/tomada/icon_512x512@2x.png"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "depends": []
      }
    }
  }
}
